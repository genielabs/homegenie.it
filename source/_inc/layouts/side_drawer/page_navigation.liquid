{% if group and collections[group] %}

    {% assign prevPost = collections[group] | where: "data.product", product | sort: 'data.pubDate' | reverse | sort: 'data.order' | sort: 'data.major' | getPreviousCollectionItem: page %}
    {% assign nextPost = collections[group] | where: "data.product", product | sort: 'data.pubDate' | reverse | sort: 'data.order' | sort: 'data.major' | getNextCollectionItem: page %}

    <div layout="rows center-spread" style="margin-top: 112px; gap:72px; margin-bottom: 32px; padding-left: 8px; padding-right: 8px; font-size: 140%">
        {% if prevPost and prevPost.data.major == major and prevPost.data.wip != true and prevPost.data.hidden != true %}
            {% if prevPost.data.link %}
                {% assign url=prevPost.data.link %}
            {% else %}
                {% assign url=prevPost.url %}
            {% endif %}
            <a href="{{ url | url }}" style="text-align: center">
                <div layout="row center-center">
                    <i class="material-icons notranslate">arrow_left</i>&nbsp;
                    <span>Previous</span>
                </div>
                <div class="navigation-title">{{ prevPost.data.title }}</div>
            </a>
        {% else %}
            <div>&nbsp;</div>
        {% endif %}

        {% if nextPost and nextPost.data.major == major and nextPost.data.wip != true and nextPost.data.hidden != true %}
            {% if nextPost.data.link %}
                {% assign url=nextPost.data.link %}
            {% else %}
                {% assign url=nextPost.url %}
            {% endif %}
            <a href="{{ url | url }}" style="text-align: center">
                <div layout="row center-center">
                    <span>Next</span>
                    <i class="material-icons notranslate">arrow_right</i>&nbsp;
                </div>
                <div class="navigation-title">{{ nextPost.data.title }}</div>
            </a>
        {% else %}
            <div>&nbsp;</div>
        {% endif %}

    </div>
    <style>
        .navigation-image {
            border-radius: 32px;
            border-color: rgba(100,200,200,0.5);
        }
        .navigation-title {
            color: var(--primary-color);
            margin-top: 8px;
            font-size: 80%;
            max-width: 200px;
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }
    </style>

{% endif %}
